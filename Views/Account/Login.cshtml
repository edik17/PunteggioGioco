@* Views/Account/Login.cshtml *@
@{
    ViewBag.Title = "Login";
}

<!-- Importa Bootstrap -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="row w-100">
        <div class="col-lg-5 col-md-7 col-sm-10 mx-auto">
            <div class="card shadow-lg p-4">
                <h2 class="text-center mb-3">🔐 Accedi</h2>

                <form method="post" class="mt-3">
                    <!-- Campo Username -->
                    <div class="mb-3">
                        <label class="form-label">Username</label>
                        <input type="text" name="username" class="form-control" placeholder="Inserisci il tuo username" required />
                    </div>

                    <!-- Campo PIN -->
                    <div class="mb-3">
                        <label class="form-label">PIN</label>
                        <input type="password" name="pin" class="form-control" placeholder="Inserisci il tuo PIN" required />
                    </div>

                    <!-- Mostra messaggio di errore se presente -->
                    @if (!string.IsNullOrEmpty(ViewBag.Message))
                    {
                        <p class="text-danger">@ViewBag.Message</p>
                    }

                    <!-- Pulsante di Login -->
                    <div class="text-center">
                        <button type="submit" class="btn btn-success btn-lg w-100">Accedi</button>
                    </div>
                </form>

                <hr class="my-4">

                <!-- Pulsante per registrarsi -->
                <div class="text-center">
                    <p>Non hai un account?</p>
                    <a href="@Url.Action("Register", "Account")" class="btn btn-primary w-100">Registrati</a>
                </div>

                <hr class="my-4">

                <!-- Pulsante di Logout (visibile solo se l'utente è loggato) -->
                @if (Context.Session.GetString("User") != null)
                {
                    <div class="text-center">
                        <form method="post" action="@Url.Action("Logout", "Account")">
                            <button type="submit" class="btn btn-danger w-100">🚪 Logout</button>
                        </form>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Opzionale: Aggiungi JavaScript di Bootstrap se necessario -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
