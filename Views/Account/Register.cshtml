@* Views/Account/Register.cshtml *@
@{
    ViewBag.Title = "Registrazione";
}

<!-- Importa Bootstrap (se non è già incluso nel layout) -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h2 class="text-center mb-3">Registrati</h2>

        <form method="post" class="mt-3">
            <!-- Campo Username -->
            <div class="mb-3">
                <label class="form-label">Username</label>
                <input type="text" name="username" class="form-control" placeholder="Inserisci il tuo username" required />
            </div>

            <!-- Campo PIN -->
            <div class="mb-3">
                <label class="form-label">PIN</label>
                <input type="password" name="pin" class="form-control" placeholder="Scegli un PIN" required />
            </div>

            <!-- Mostra messaggio di errore se presente -->
            @if (!string.IsNullOrEmpty(ViewBag.Message))
            {
                <p class="text-danger">@ViewBag.Message</p>
            }

            <!-- Pulsante di Registrazione -->
            <div class="text-center">
                <button type="submit" class="btn btn-success btn-lg w-100">Registrati</button>
            </div>
        </form>

        <hr class="my-4">

        <!-- Pulsante per accedere alla pagina di Login -->
        <div class="text-center">
            <p>Hai già un account?</p>
            <a href="@Url.Action("Login", "Account")" class="btn btn-primary">Accedi</a>
        </div>
    </div>
</div>

<!-- Opzionale: Aggiungi JavaScript di Bootstrap se necessario -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
