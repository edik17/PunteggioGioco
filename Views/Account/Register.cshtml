@* Views/Account/Register.cshtml *@
@{
    ViewBag.Title = "Registrazione";
}

<!-- Importa Bootstrap (se non è già incluso nel layout) -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="row w-100">
        <div class="col-lg-6 col-md-8 col-sm-10 mx-auto">
            <div class="card shadow-lg p-4">
                <h2 class="text-center mb-3">Registrati</h2>

                <form method="post" class="mt-3">
                    <!-- Campo Username -->
                    <div class="mb-3">
                        <label class="form-label">Username</label>
                        <input type="text" class="form-control" name="username" maxlength="50" required pattern="^[a-zA-Z0-9]+$" placeholder="Username" title="Solo lettere e numeri">
                    </div>

                    <!-- Campo PIN -->
                    <div class="mb-3">
                        <label class="form-label">PIN</label>
                        <input type="password" class="form-control" name="pin" maxlength="10" minlength="4" required pattern="[a-zA-Z0-9]{4,10}" placeholder="PIN (4-10 caratteri)" title="Solo lettere e numeri (4-10 caratteri)">
                    </div>

                    <!-- Mostra messaggio di errore se presente -->
                    @if (!string.IsNullOrEmpty(ViewBag.Message))
                    {
                        <p class="text-danger">@ViewBag.Message</p>
                    }

                    <!-- Pulsante di Registrazione -->
                    <div class="text-center">
                        <button type="submit" class="btn btn-success btn-lg w-100">Registrati</button>
                    </div>
                </form>

                <hr class="my-4">

                <!-- Pulsante per accedere alla pagina di Login -->
                <div class="text-center">
                    <p>Hai già un account?</p>
                    <a href="@Url.Action("Login", "Account")" class="btn btn-primary w-100">Accedi</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Opzionale: Aggiungi JavaScript di Bootstrap se necessario -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
