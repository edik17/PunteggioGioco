@* Views/Leaderboard/Index.cshtml *@
@model List<TopSecret.Models.User>

@{
    ViewBag.Title = "Classifica";
}

<!-- Importa Bootstrap -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="row w-100">
        <div class="col-lg-8 col-md-10 col-sm-12 mx-auto">
            <div class="card shadow-lg p-4">
                <h2 class="text-center mb-3">📊 Classifica Utenti</h2>

                <div class="table-responsive">
                    <table class="table table-striped table-hover text-center">
                        <thead class="table-dark">
                            <tr>
                                <th>#</th>
                                <th>Username</th>
                                <th>Punti</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                <tr>
                                    <td>@(i + 1)</td>
                                    <td>@Model[i].Username</td>
                                    <td class="fw-bold text-primary">@Model[i].Points</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="text-center mt-4">
                    <a href="@Url.Action("Index", "Home")" class="btn btn-secondary w-100">🏠 Torna alla Home</a>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
