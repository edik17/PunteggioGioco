@* Views/Leaderboard/Index.cshtml *@
@model List<TopSecret.Models.User>

@{
    ViewBag.Title = "Classifica";
}

<!-- Importa Bootstrap per migliorare lo stile -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h2 class="text-center mb-3">📊 Classifica Utenti</h2>

        <table class="table table-striped">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Username</th>
                    <th>Punti</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>@(i + 1)</td>
                        <td>@Model[i].Username</td>
                        <td class="fw-bold text-primary">@Model[i].Points</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="text-center mt-4">
            <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">🏠 Torna alla Home</a>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
