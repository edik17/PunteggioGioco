@* Views/Home/Index.cshtml *@
@model TopSecret.Models.User
@{
    ViewBag.Title = "Home";
}

<!-- Importa Bootstrap (se non è già incluso nel layout) -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h2 class="text-center mb-3">Benvenuto, @Model.Username! 🎉</h2>

        <div class="text-center">
            <p class="fs-4">I tuoi punti: <span class="fw-bold text-primary">@Model.Points</span></p>

            <!-- Pulsante per aggiungere punti -->
            <form method="post" action="@Url.Action("AddPoint", "Home")" class="d-inline">
                <button type="submit" class="btn btn-success btn-lg">+1 Punto</button>
            </form>
        </div>

        <hr class="my-4">

        <!-- Pulsante per visualizzare la classifica -->
        <div class="text-center">
            <a href="@Url.Action("Index", "Leaderboard")" class="btn btn-primary btn-lg">
                📊 Vedi Classifica
            </a>
        </div>

        <hr class="my-4">

        <!-- Bottone di Logout (visibile solo se l'utente è loggato) -->
        @if (Context.Session.GetString("User") != null)
        {
            <div class="text-center">
                <form method="post" action="@Url.Action("Logout", "Account")">
                    <button type="submit" class="btn btn-danger btn-lg">🚪 Logout</button>
                </form>
            </div>
        }
    </div>
</div>

<!-- Opzionale: Aggiungi JavaScript di Bootstrap se necessario -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
