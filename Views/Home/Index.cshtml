@* Views/Home/Index.cshtml *@
@model TopSecret.Models.User
@{
    ViewBag.Title = "Home";
}

<!-- Importa Bootstrap -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<!-- Stili per l'animazione delle gocce -->
<style>
    .drop {
        position: absolute;
        width: 45px; /* Gocce più grandi */
        height: 45px;
        background-color: rgba(0, 162, 255, 0.8);
        border-radius: 50%;
        animation: drop-fall 1.5s ease-out forwards; /* Durata aumentata */
        opacity: 0.9;
    }

    @@keyframes drop-fall {
        0% {
            transform: translateY(0) scale(1);
            opacity: 1;
        }

        50% {
            transform: translateY(30px) scale(1.2); /* Aggiunto un leggero ingrandimento */
        }

        100% {
            transform: translateY(80px) scale(0.8);
            opacity: 0;
        }
    }
</style>

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="row w-100">
        <div class="col-lg-6 col-md-8 col-sm-10 mx-auto">
            <div class="card shadow-lg p-4 text-center">
                <h2 class="mb-3">Benvenuto, @Model.Username! 🎉</h2>

                <p class="fs-4">I tuoi punti: <span class="fw-bold text-primary" id="points">@Model.Points</span></p>

                <!-- Pulsante per aggiungere punti -->
                <form method="post" action="@Url.Action("AddPoint", "Home")" id="pointForm">
                    <button type="submit" class="btn btn-success btn-lg w-100" id="pointButton">+1 Punto</button>
                </form>

                <hr class="my-4">

                <!-- Pulsante per visualizzare la classifica -->
                <a href="@Url.Action("Index", "Leaderboard")" class="btn btn-primary btn-lg w-100">
                    📊 Vedi Classifica
                </a>

                <hr class="my-4">

                <!-- Bottone di Logout -->
                @if (Context.Session.GetString("User") != null)
                {
                    <form method="post" action="@Url.Action("Logout", "Account")">
                        <button type="submit" class="btn btn-danger btn-lg w-100">🚪 Logout</button>
                    </form>
                }
            </div>
        </div>
    </div>
</div>

<!-- Script per l'animazione delle gocce -->
<script>
    document.getElementById("pointButton").addEventListener("click", function(event) {
        event.preventDefault(); // Evita il reload immediato

        let button = event.target;
        let rect = button.getBoundingClientRect();

        for (let i = 0; i < 7; i++) { // Più gocce generate
            let drop = document.createElement("div");
            drop.classList.add("drop");

            // Posizione iniziale random vicino al bottone
            drop.style.left = `${rect.left + rect.width / 2 + (Math.random() * 40 - 20)}px`;
            drop.style.top = `${rect.top + rect.height / 2 + (Math.random() * 10 - 5)}px`;

            document.body.appendChild(drop);

            setTimeout(() => {
                drop.remove();
            }, 1500); // Tempo aumentato per rimuoverle dopo l'animazione
        }

        // Ritardo nell'invio del form per visualizzare l'animazione
        setTimeout(() => {
            document.getElementById("pointForm").submit();
        }, 300);
    });
</script>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
